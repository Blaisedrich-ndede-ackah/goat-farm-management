  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#2c5530",
  "background_color": "#f5f5f5",
  "scope": "/",
  "lang": "en",
  "categories": ["productivity", "business", "agriculture"],
  "icons": [
